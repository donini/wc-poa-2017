.site-footer
    background $gray-light
    border-top none

    .widget-area
        .widget-column
            h2.widget-title
                font-size 1.2rem

            .wcorg-organizer
                align-items center
                display flex
                margin-bottom 10px

                h2
                    font-size 20px
                    font-size 1.25rem
                    margin-bottom 0
                    order 2
                p
                    display none

                &-description
                    margin-right 20.3px
                    min-width 50px
                    order 1

                img
                    border 4px solid $sponsor-border
                    display block
                    margin 0
                    width 50px

            .sponsor-level
                margin-bottom 40px

                a.sponsor-logo
                    box-shadow none
                    float left

                    .attachment-wcb-sponsor-logo-horizontal-2x
                        border-bottom 4px solid $sponsor-border
                        border-right 4px solid $sponsor-border
                        border-top 4px solid $sponsor-border
                        box-shadow none

                a.sponsor-logo:nth-child( even )
                    .attachment-wcb-sponsor-logo-horizontal-2x
                        border-left 4px solid $sponsor-border

                a.sponsor-logo:hover
                    box-shadow none

            .gold
                a.sponsor-logo
                    .attachment-wcb-sponsor-logo-horizontal-2x
                        max-height 150px

            .silver
                a.sponsor-logo
                    .attachment-wcb-sponsor-logo-horizontal-2x
                        max-height 130px

            .bronze
                a.sponsor-logo
                    .attachment-wcb-sponsor-logo-horizontal-2x
                        max-height 100px

.site-info
    font-weight bold

    @media screen and ( min-width: $screen-md-min )
        text-align right

