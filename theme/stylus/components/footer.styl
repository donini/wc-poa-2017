.site-footer
    background $gray-light
    border-top none

    .widget-area
        .widget-column
            h2.widget-title
                color $main-color
                font-size 1.2rem
                margin-bottom 1em

            .wcorg-organizer
                align-items center
                display flex
                margin-bottom 10px

                h2
                    font-size 20px
                    font-size 1.25rem
                    margin-bottom 0
                    order 2
                p
                    display none

                &-description
                    margin-right 20.3px
                    min-width 50px
                    order 1

                img
                    border 4px solid $sponsor-border
                    display block
                    margin 0
                    width 50px

            .sponsor-level
                margin-bottom 40px
                &:after
                    clear both

                a.sponsor-logo
                    color $main-color
                    align-items center
                    box-shadow none
                    float left

                    .attachment-wcb-sponsor-logo-horizontal-2x
                        box-shadow none

                a.sponsor-logo:hover
                    box-shadow none

            .gold
                a
                    height 150px
                    max-width 260px

            .silver
                a
                    height 120px
                    max-width 200px

            .bronze
                a
                    height 100px
                    max-width 150px

            .petico
                a 
                    height 85px
                    max-width 120px

            .apoiador
                a 
                    height 65px
                    max-width 110px

.site-info

    @media screen and ( min-width: $screen-md-min )
        text-align right

.patro-vivente
    display inline-block
    .avatar
        border-radius 50%
        float left
        margin 0 30px 20px 0
    span
        display inline-block
        margin-top 24px