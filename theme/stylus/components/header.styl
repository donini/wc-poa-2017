.menu-toggle
    color $white

.dropdown-toggle
    color $white

.js
    .main-navigation.toggled-on > div > ul
        background-color $main-color

.main-navigation
    ul
        ul
            background-color $main-color
            border 0

    li
        li:hover
            background-color $white
            color $main-color

    li
        li.current_page_item,
        li.current-menu-item
            a:hover
                color $main-color

.site-header
    .navigation-top
        background $main-color !important

        a,
        .menu-scroll-down
            color $white

            &:hover
              color $light-blue

        .current-menu-item > a,
        .current_page_item > a
            color $light-blue

body.has-header-image,
body.has-header-video
    .site-description
        opacity 1

.site-branding
    .wrap
        text-align center

    .site-description
        background-color rgba( 0, 56, 153, 0.5 )
        padding 2px

    .site-title
        background-color rgba( 0, 56, 153, 0.8 )
        padding 3px 7px

.home
    .site-branding
        text-align center

    .site-title
        display none

    .site-description
        clear none
        font-size 24px
        font-size 1.5rem
        font-weight 800
        letter-spacing .08em
        line-height 1.25
        margin 0
        padding 0
        text-transform: uppercase

    .custom-header-media:before
        background none

    .site-branding .site-description
        background-color $main-color
        opacity 1
        padding 2px 8px

.has-header-image:not( .twentyseventeen-front-page ):not( .home ) .custom-header-media img
    height auto
    top -260px

.panel-image:before
    background linear-gradient( to bottom, rgba( 0, 0, 0, 0 ) 0%, rgba( 255, 255, 255, 1 ) 100% )

.custom-header-media:before
    background linear-gradient( to bottom, rgba( 0, 0, 0, 0 ) 0%, rgba( 255, 255, 255, 0.3 ) 75%, rgba( 255, 255, 255, 0.3 ) 100% )
